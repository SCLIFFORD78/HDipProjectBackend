<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
  {{> title-card title="Selected Hive" subTitle="Detailed Information"}}
  {{> main-menu }}
</div>

<div class="uk-container uk-container-xlarge uk-margin">
  <div>
    <div class="uk-card uk-card-default uk-card-hover uk-card-body uk-margin uk-column-1-4">
      <h3 class="uk-card-title">Hive Number: {{hive.hiveNumber}}</h3>
      <p>FeelsLike: {{weather.feelsLike}} Celcus</p>
      <p>Cloud Cover: {{weather.clouds}}</p>
      <p>Wind Speed: {{weather.windSpeed}} Kph</p>
      <p>Wind Direction: {{weather.windDirection}} Deg.</p>
      <p>Visibility: {{weather.visibility}} km</p>
      <p>Humidity: {{weather.humidity}}%</p>
      
    </div>
  </div>
  {{> error }}
  <div class="uk-column-1-2" uk-grid>
    <div class="uk-width-expand@m">
      {{> hive-info}}
    </div>
    <div class="uk-card uk-card-default uk-card-body uk-width-1-2@m">
      <div id="photos"></div>
    </div>
    
  </div>
  
</div>


<script src="https://product-gallery.cloudinary.com/all.js" type="text/javascript">
</script>
<script>
  var _id = document.getElementById("_id").value;
  const myGallery = cloudinary.galleryWidget({
    container: "#photos",
    cloudName: "digabwjfx",
    mediaAssets: [{ tag: _id }, { tag: "Home" }]    // by default mediaType: "image"
  });
  if (myGallery.mediaAssets) {
    myGallery.render();
  }
  myGallery.render();
</script>